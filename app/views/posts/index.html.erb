<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.title %>
    </li>
<%= post.body %>
<% if user_signed_in? %>
<strong>
<p> Authors name:
<%= post.user.user_name %>
</p>
</strong>
<% end %>
  <% end %>
</ul>

<% if user_signed_in? %>

<%= link_to "Create new post ", new_post_path %><br>
<% else %>

<%= link_to "Login", user_session_path %><br>
<%= link_to "Signup", new_user_registration_path %>
<% end %>
